[package]
name = "ruqu-qgat-mol"
version.workspace = true
edition.workspace = true
rust-version.workspace = true
license.workspace = true
authors.workspace = true
repository.workspace = true
readme = "README.md"
description = "Quantum Graph Attention for Molecules - combines quantum mechanics with graph attention networks for molecular simulation"
keywords = ["quantum", "graph-attention", "molecular", "chemistry", "machine-learning"]
categories = ["science", "algorithms", "simulation"]
homepage = "https://ruv.io"
documentation = "https://docs.rs/ruqu-qgat-mol"

[lib]
crate-type = ["rlib"]

[features]
default = ["simd"]
simd = []
wasm = ["dep:wasm-bindgen", "dep:js-sys", "dep:getrandom"]
napi = ["dep:napi", "dep:napi-derive"]

[dependencies]
# Math and numerics
ndarray = { workspace = true, features = ["serde"] }
rand = { workspace = true }
rand_distr = { workspace = true }

# Serialization
serde = { workspace = true }
serde_json = { workspace = true }

# Error handling
thiserror = { workspace = true }

# Performance
rayon = { workspace = true }
parking_lot = { workspace = true }

# WASM support
wasm-bindgen = { workspace = true, optional = true }
js-sys = { workspace = true, optional = true }
getrandom = { workspace = true, optional = true }

# Node.js bindings
napi = { workspace = true, optional = true }
napi-derive = { workspace = true, optional = true }

[dev-dependencies]
criterion = { workspace = true }
proptest = { workspace = true }
approx = "0.5"
