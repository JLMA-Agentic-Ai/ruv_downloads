[package]
name = "ruvector-attention"
version = "0.1.0"
edition = "2021"
authors = ["ruvector contributors"]
description = "Attention mechanisms for ruvector - geometric, graph, and sparse attention"
license = "MIT OR Apache-2.0"
repository = "https://github.com/ruvnet/ruvector"
keywords = ["attention", "machine-learning", "vector-search", "gnn", "transformer"]
categories = ["algorithms", "science"]

[lib]
crate-type = ["rlib"]

[features]
default = ["simd"]
simd = []
wasm = []
napi = ["dep:napi-derive", "dep:napi"]

[dependencies]
thiserror = "1.0"
rayon = "1.10"
serde = { version = "1.0", features = ["derive"] }
rand = "0.8"
napi = { version = "2", optional = true }
napi-derive = { version = "2", optional = true }

[dev-dependencies]
criterion = "0.5"
approx = "0.5"
rand = "0.8"

[[bench]]
name = "attention_bench"
harness = false
