[package]
name = "ruqu-qarlp"
version.workspace = true
edition.workspace = true
rust-version.workspace = true
license.workspace = true
authors.workspace = true
repository.workspace = true
readme = "README.md"
description = "Quantum-Assisted Reinforcement Learning Policy - exploratory quantum RL implementation with variational circuits"
keywords = ["quantum", "rl", "policy", "variational", "ml"]
categories = ["science", "algorithms", "simulation"]
homepage = "https://ruv.io"
documentation = "https://docs.rs/ruqu-qarlp"

[dependencies]
# Math and numerics
ndarray = { workspace = true, features = ["serde"] }
rand = { workspace = true }
rand_distr = { workspace = true }

# Serialization
serde = { workspace = true }
serde_json = { workspace = true }

# Error handling
thiserror = { workspace = true }

# Logging
tracing = { workspace = true }

# Performance
rayon = { workspace = true, optional = true }

[dev-dependencies]
criterion = { workspace = true }
proptest = { workspace = true }
approx = "0.5"
tempfile = "3.13"

# Benchmarks are disabled for now - uncomment when benches/ directory is created
# [[bench]]
# name = "policy_bench"
# harness = false

# [[bench]]
# name = "gradient_bench"
# harness = false

[features]
default = []
parallel = ["rayon"]  # Parallel gradient computation

[lib]
crate-type = ["rlib"]
bench = false
