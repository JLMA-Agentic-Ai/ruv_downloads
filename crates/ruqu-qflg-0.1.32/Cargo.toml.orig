[package]
name = "ruqu-qflg"
version.workspace = true
edition.workspace = true
rust-version.workspace = true
license.workspace = true
authors.workspace = true
repository.workspace = true
readme = "README.md"
description = "Quantum Federated Learning with Byzantine Tolerance - Privacy-preserving distributed quantum ML"
keywords = ["quantum", "federated", "byzantine", "privacy", "dp"]
categories = ["science", "algorithms", "cryptography"]
homepage = "https://ruv.io"
documentation = "https://docs.rs/ruqu-qflg"

[dependencies]
# Math and numerics
ndarray = { version = "0.16", features = ["serde"] }
rand = { workspace = true }
rand_distr = { workspace = true }

# Serialization
serde = { workspace = true }
serde_json = { workspace = true }

# Error handling
thiserror = { workspace = true }

# Async runtime
tokio = { workspace = true }

# Cryptography
blake3 = "1.5"
ed25519-dalek = { version = "2.1", features = ["rand_core"] }

# Performance
parking_lot = { workspace = true }
dashmap = { workspace = true }

# Time and UUID
chrono = { version = "0.4", features = ["serde"] }
uuid = { workspace = true, features = ["v4"] }

# Tracing (optional)
tracing = { workspace = true, optional = true }

[dev-dependencies]
criterion = { workspace = true }
proptest = { workspace = true }
tokio = { version = "1.0", features = ["rt-multi-thread", "macros", "sync", "time"] }

[features]
default = ["full"]
simd = []  # SIMD acceleration for gradient operations
wasm = []  # WASM-compatible mode
parallel = []  # Multi-threaded aggregation
tracing = ["dep:tracing"]  # Observability
full = ["parallel", "tracing"]

[lib]
crate-type = ["rlib"]
bench = false
